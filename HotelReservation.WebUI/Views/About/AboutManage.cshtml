@using System.Web
@model IEnumerable<About>
@{
    ViewData["Title"] = "About Manager";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="About" asp-action="Create" class="btn btn-outline-primary btn-sm btn-rounded">+ Add New One</a> - <a asp-controller="About" asp-action="kurtulusocL" class="btn btn-outline-dark btn-sm btn-rounded">About List</a>
                        </p>
                        <div class="table-responsive">
                            <table class=" table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Photo</th>
                                        <th>Title</th>
                                        <th>Subtitle</th>
                                        <th>Hit</th>
                                        <th>Ops</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/img/us/about/@item.Image" class="img-responsive" alt="@item.Image" style="max-height:90px;max-width:90px;min-height:90px;min-width:90px" />
                                            </td>
                                            <td>@item.Title</td>
                                            <td>
                                                @if (item.Subtitle.Length > 55)
                                                {
                                                    @Html.Raw(HttpUtility.HtmlDecode(More.SafeSubstring(item.Subtitle, 55) + " ..."))
                                                }
                                                else
                                                {
                                                    @Html.Raw(HttpUtility.HtmlDecode(More.SafeSubstring(item.Subtitle, 55)))
                                                }
                                            </td>
                                            <td>
                                                @if (item.Hit != null)
                                                {
                                                    @item.Hit.Value.ToString()
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="About" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                                                <a asp-controller="About" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                                                <a asp-controller="About" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm btn-rounded">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>