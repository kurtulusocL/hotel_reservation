@model ChangePasswordDto
@{
    ViewData["Title"] = "Change Your Password";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="ChangePassword" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>Current Password <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="CurrentPassword" name="CurrentPassword" required>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>New Password <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="NewPassword" name="NewPassword" required>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>Confirm New Password <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="ConfirmNewPassword" name="ConfirmNewPassword" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Change My Password</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            @if (TempData["error"] != null)
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["modelState"]</strong>
            }
        </div>
    </div>
</div>