@model LoginDto
@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>myhotel.com | @ViewData["Title"] </title>
    <link rel="stylesheet" type="text/css" href="~/temp/dashboard/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/temp/dashboard/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/temp/dashboard/assets/css/style.css">
    <style>
        .main-wrapper {
            background-color: cadetblue
        }

        .account-box {
            background-color: cadetblue
        }
    </style>
    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="main-wrapper account-wrapper">
        <div class="account-page">
            <div class="account-center">
                <div class="account-box">
                    @using (Html.BeginForm("Login", "AdminAuth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Email Address <span class="text-danger">*</span></label>
                            <input type="email" autofocus="" class="form-control" asp-for="Email" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label>Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" asp-for="Password" name="Password" required>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-keep-me">
                                        <label class="checkbox">
                                            <input type="checkbox" asp-for="RememberMe"><i></i>Remember Me
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary account-btn">Login</button>
                        </div>
                    }
                </div>
                <div class="row">
                    @if (TempData["authError"] != null)
                    {
                        <strong>@TempData["authError"]</strong>
                    }
                    @if (TempData["error"] != null)
                    {
                        <strong>@TempData["error"]</strong>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="~/temp/dashboard/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/temp/dashboard/assets/js/popper.min.js"></script>
    <script src="~/temp/dashboard/assets/js/bootstrap.min.js"></script>
    <script src="~/temp/dashboard/assets/js/app.js"></script>
</body>
</html>