@model UpdateProfileDto
@{
    ViewData["Title"] = "Update to Your Profile";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="UpdateProfile" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Username <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Username" name="Username" value="@Model.Username" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" asp-for="Email" name="Email" value="@Model.Email" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone Number <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Country <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Country" name="Country" value="@Model.Country" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Gender <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Gender" name="Gender" value="@Model.Gender" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Update My Profile</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["error"] != null)
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
        </div>
    </div>
</div>