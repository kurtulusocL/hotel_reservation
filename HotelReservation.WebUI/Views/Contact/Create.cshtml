@model Contact
@{
    ViewData["Title"] = "Add A New Contact";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>City <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="City" name="City" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Province <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Province" name="Province" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Country <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Country" name="Country" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Contact Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Address" name="Address" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" asp-for="EmailAddress" name="EmailAddress" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone Number <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="PhoneNumber" name="PhoneNumber" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Add Contact</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            @if (TempData["error"] != null)
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["modelState"]</strong>
            }
        </div>
    </div>
</div>