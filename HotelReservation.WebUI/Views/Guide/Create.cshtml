@model Guide
@{
    ViewData["Title"] = "Add A New Guide";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Name Surname <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="NameSurname" name="NameSurname" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Expertise <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Expertise" name="Expertise" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Experience <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Experience" name="Experience" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Short Description <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="ShortDesc" name="ShortDesc" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" asp-for="EmailAddress" name="EmailAddress" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone Number <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="PhoneNumber" name="PhoneNumber" required>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Upload Image <span class="text-danger">*</span></label>
                                <div class="col-md-10">
                                    <input class="form-control btn-danger" type="file" name="image" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Add Guide</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
        </div>
    </div>
</div>