@model HotelPromotionUpdateDto
@{
    ViewData["Title"] = "Update to Hotel Promotion Status";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="PromotionUpdate" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="display-block">Promotin Status</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="IsPromotion" id="IsPromotion_Yes" value="True">
                                    <label class="form-check-label" for="IsPromotion_Yes">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="IsPromotion" id="IsPromotion_No" value="False">
                                    <label class="form-check-label" for="IsPromotion_No">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Update Hotel Promotion Status</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
        </div>
    </div>
</div>