@model Pricing
@{
    ViewData["Title"] = "Pricing Detail";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="Pricing" asp-action="Create" class="btn btn-outline-primary btn-sm btn-rounded">+ Add New One</a> - <a asp-controller="Pricing" asp-action="kurtulusocL" class="btn btn-outline-info btn-sm btn-rounded">Pricing List</a> - <a asp-controller="Pricing" asp-action="PricingManage" class="btn btn-outline-dark btn-sm btn-rounded">Pricing Manager</a>
                        </p>
                        <dl class="row">                           
                            <dt class="col-sm-4">
                                Created At
                            </dt>
                            <dd class="col-sm-8">
                                @Model.CreatedDate.ToShortDateString()
                            </dd>
                            <dt class="col-sm-4">
                                Updated At
                            </dt>
                            <dd class="col-sm-8">
                                @if (Model.UpdatedDate != null)
                                {
                                    <span>@Model.UpdatedDate.Value.ToShortDateString()</span>
                                }
                                else
                                {
                                    <strong>No Updated Date Yet</strong>
                                }
                            </dd>
                            <dt class="col-sm-4">
                                Deleted At
                            </dt>
                            <dd class="col-sm-8">
                                @if (Model.DeletedDate != null)
                                {
                                    <span>@Model.DeletedDate.Value.ToShortDateString()</span>
                                }
                                else
                                {
                                    <strong>No Deleted Date Yet</strong>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <a asp-controller="Pricing" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success btn-sm btn-rounded">Edit</a>
                    @if (Model.IsConfirmed == true)
                    {
                        <a asp-controller="Pricing" asp-action="DeActive" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm btn-rounded">Suspend</a>
                    }
                    else
                    {
                        <a asp-controller="Pricing" asp-action="Active" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm btn-rounded">Share</a>
                    }
                    @if (Model.IsDeleted == true)
                    {
                        <a asp-controller="Pricing" asp-action="NotDeleted" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm btn-rounded">Not Deleted</a>
                    }
                    else
                    {
                        <a asp-controller="Pricing" asp-action="Deleted" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm btn-rounded">Deleted</a>
                    }                    
                </div>
            </div>
        </div>
    </div>
</div>