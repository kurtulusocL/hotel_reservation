@using System.Web
@model IEnumerable<ReservationPolicy>
@{
    ViewData["Title"] = "Reservation Policy Manager";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="ReservationPolicy" asp-action="Create" class="btn btn-outline-primary btn-sm btn-rounded">+ Add New One</a> - <a asp-controller="ReservationPolicy" asp-action="kurtulusocL" class="btn btn-outline-dark btn-sm btn-rounded">Reservation Policy List</a>
                        </p>
                        <div class="table-responsive">
                            <table class=" table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Policy Title</th>
                                        <th>Desciption</th>
                                        <th>Created At</th>
                                        <th>Ops</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>
                                                @if (item.Description.Length > 55)
                                                {
                                                    @Html.Raw(HttpUtility.HtmlDecode(More.SafeSubstring(item.Description,55)+" ..."))
                                                }
                                                else
                                                {
                                                    @Html.Raw(HttpUtility.HtmlDecode(More.SafeSubstring(item.Description,55)))
                                                }
                                            </td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-controller="ReservationPolicy" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                                                <a asp-controller="ReservationPolicy" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                                                <a asp-controller="ReservationPolicy" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm btn-rounded">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>