@model SendMail
@{
    ViewData["Title"] = "Sent A New E-Mail";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Sender Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" asp-for="SenderEmail" name="SenderEmail" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Reciever Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" asp-for="RecieverEmail" name="RecieverEmail" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Email Subject <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Subject" name="Subject" required>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-form-label col-md-3">Email <span class="text-danger">*</span></label>
                                <div class="col-md-12">
                                    <textarea class="form-control" asp-for="Text" name="Text" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Send Email</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
        </div>
    </div>
</div>
