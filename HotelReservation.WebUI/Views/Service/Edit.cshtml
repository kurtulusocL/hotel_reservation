@model Service
@{
    ViewData["Title"] = "Update to Service";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                <label>Service Type <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="ServiceType" name="ServiceType" value="@Model.ServiceType" required>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Price <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Price" name="Price" value="@Model.Price" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Update Service</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["success"] != null)
            {
                <strong class="alert-info">@TempData["success"]</strong>
            }
            else
            {
                <strong class="alert-info">@TempData["error"]</strong>
            }
        </div>
    </div>
</div>