@{
    Layout = null;
}

<div class="container">
    <div class="row ">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 ">
            <div class="ft-img">
                <img src="~/temp/web/images/ft_logo.png" alt="">
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12 ">
            <div class="footer-widget ">
                <h3 class="footer-title ">Quick Links</h3>
                <ul class="angle list-none">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Hotel" asp-action="Index">Hotel</a></li>
                    <li><a asp-controller="Guide" asp-action="Index">Guide</a></li>
                    <li><a asp-controller="Picture" asp-action="Index">Pictures</a></li>
                    <li><a asp-controller="Pricing" asp-action="Index">Pricing</a></li>
                </ul>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12 ">
            <div class="footer-widget ">
                <h3 class="footer-title ">Quick Links</h3>
                <ul class="angle list-none">
                    <li><a asp-controller="ReservationPolicy" asp-action="Index">Reservation Policy</a></li>
                    <li><a asp-controller="Service" asp-action="Index">Our Services</a></li>
                    <li><a asp-controller="About" asp-action="Index">About</a>
                    <li><a asp-controller="Contact" asp-action="Index">Contacts</a></li>
                </ul>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 ">
            <div class="footer-widget">
                <h3 class="footer-title">Contact Info</h3>
                @await Component.InvokeAsync("FooterContact")
                <div class="social-icon ">
                    @await Component.InvokeAsync("FooterSocialMedia")
                </div>
            </div>
        </div>
    </div>
</div>