@model IEnumerable<SocialMedia>
@{
    ViewData["Title"] = "Social Media List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="SocialMedia" asp-action="Create" class="btn btn-outline-primary btn-sm btn-rounded">+ Add New One</a> - <a asp-controller="SocialMedia" asp-action="SocialMediaManage" class="btn btn-outline-dark btn-sm btn-rounded">Social Media Manager</a>
                        </p>
                        <div class="table-responsive">
                            <table class=" table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Social Media Logo</th>
                                        <th>Account Name</th>
                                        <th>Web Url</th>
                                        <th>Created At</th>
                                        <th>Ops</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="~/img/us/socialMedia/@item.Image" style="max-height:75px;max-width:75px;min-height:75px;min-width:75px" class="img-circle">
                                            </td>
                                            <td>@item.Name</td>
                                            <td>
                                                <a href="@item.Url" target="_blank" class="btn btn-outline-dark btn-sm">@item.Name</a>
                                            </td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>
                                            <td>
                                                <a asp-controller="SocialMedia" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                                                <a asp-controller="SocialMedia" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>