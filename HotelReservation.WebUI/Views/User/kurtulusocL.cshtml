@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Web.Common
@model IPagedList<AppUser>
@{
    ViewData["Title"] = "All User List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="User" asp-action="UserManage" class="btn btn-outline-dark btn-sm btn-rounded">User Manager</a>
                        </p>
                        <div class="table-responsive">
                            <table class=" table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Name Surname</th>
                                        <th>Username</th>
                                        <th>Email Address</th>
                                        <th>Title</th>
                                        <th>Phone Number</th>
                                        <th>Ops</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.NameSurname</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>
                                                @if (item.Title != null)
                                                {
                                                    <a asp-controller="User" asp-action="Admin" class="btn btn-link" target="_blank">See All Admins</a>
                                                }
                                                else
                                                {
                                                    <a asp-controller="User" asp-action="MemberUser" class="btn btn-link" target="_blank">See All Member Users</a>
                                                }
                                            </td>
                                            <td>@item.PhoneNumber</td>
                                            <td>
                                                <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="pagination">
                            <div class="pagination-info">
                                @Html.PagedListPager(Model, page => Url.Action("kurtulusocL", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>