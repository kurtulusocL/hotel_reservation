@model LoginDto
@{
    ViewData["Title"] = "Please Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-caption">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">
        <div class="row ">
            <div class="col-xl-10 col-lg-10 col-md-7 col-sm-12 col-12 mb30">
                <div class="tour-booking-form">
                    @using (Html.BeginForm("Login", "UserAuth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <h4 class="tour-form-title">@ViewData["Title"]</h4>
                            </div>
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label"> Email Address *</label>
                                    <input type="email" asp-for="Email" name="Email" placeholder="Email Address *" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label">Password *</label>
                                    <input type="password" asp-for="Password" name="Password" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12">
                                <div class="form-group">
                                    <span>
                                        <input id="RememberMe" asp-for="RememberMe" name="RememberMe" type="checkbox" class="with-font">
                                        <label for="RememberMe">Remember Me</label> <br />
                                    </span>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <button type="submit" name="singlebutton" class="btn btn-primary">Login</button>
                            </div>
                            <hr />
                            <a asp-controller="UserAuth" asp-action="ForgotPassword" class="btn btn-default btn-xs mb20">Forgo My Password</a>
                        </div>
                    }
                </div>
                <div class="row">
                    @if (TempData["error"] != null)
                    {
                        <h3>@TempData["error"]</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div>