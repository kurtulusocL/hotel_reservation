@model ResetPasswordDto
@{
    ViewData["Title"] = "Reset My Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-caption">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">
        <div class="row ">
            <div class="col-xl-10 col-lg-10 col-md-7 col-sm-12 col-12 mb30">
                <div class="tour-booking-form">
                    <form method="post" asp-action="ResetPassword">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <h4 class="tour-form-title">@ViewData["Title"]</h4>
                            </div>
                            <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label">Email Address *</label>
                                    <input type="email" asp-for="Email" name="Email" placeholder="Email Address *" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label">New Password *</label>
                                    <input type="password" asp-for="NewPassword" name="NewPassword" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="control-label">Confirm New Password *</label>
                                    <input type="password" asp-for="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <button type="submit" name="singlebutton" class="btn btn-primary">ReSet My Password</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row">
                    @if (TempData["success"] != null)
                    {
                        <strong class="alert-info">@TempData["success"]</strong>
                    }
                    @if (TempData["error"] != null)
                    {
                        <strong class="alert-info">@TempData["error"]</strong>
                    }
                    else
                    {
                        <strong class="alert-info">@TempData["modelState"]</strong>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>Email Address <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="Email" name="Email" required>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>New Password <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="NewPassword" name="NewPassword" required>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>Confirm New Password <span class="text-danger">*</span></label>
                                <input class="form-control" type="password" asp-for="ConfirmNewPassword" name="ConfirmNewPassword" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">ReSet My Password</button>
                        <input type="hidden" asp-for="Code" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            
        </div>
    </div>
</div>